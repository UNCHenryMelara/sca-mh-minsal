{% extends 'MinSalSCABundle:Default:index.html.twig' %}
{% form_theme form 'MinSalSCAUsersBundle:ChangePassword/Form:fields.html.twig' %}
{% block body %}
    <script type="text/javascript">
        $(document).ready(function(){
            $('#btnGuardar').button();
            $('#btnEliminar').button();
            $('#btnRegresar').button();

            //Hoja de estilo a tabla
           $('td>label').parent().attr('align','right');
           if($('#RegVenta_RegVentaId').val()=='' || $('#RegVenta_RegVentaId').val()==-1){
               $('#btnEliminar').hide();
           }
        });


        function enviarEliminar(){
            if(confirm('!Desea eliminar el registro "'+$('#RegVenta_RegVentaNombreEsp').val()+'"?')){
                if(!confirm('!Desea abortar la eliminacion??')){
                    $('#valido').val(true);
                    $('#eliminar').val(true);
                    $('#formulario').submit();
                    return true;
                }
            }
            return false;
        }
    </script>
    
    <form id="formulario" action="{{ path('MinSalSCAProcesosBundle_mantRegVentaEdicion') }}" {{ form_enctype(form) }} method="POST" class="RegVentaTypeForm">
        <input type="hidden" id="valido" value=false/>
        <input type="hidden" id="eliminar" name="eliminar" value=false/>
        
            <table align='center' style="border: 1px solid;" >
                <tr>
                    <td align='center' colspan="2">
                        <h1>
                           Ingrese Registro de Ventas Mensuales de "{{entNombComercial}}"
                        </h1>
                        {% if app.session.hasFlash('notice') %}
                            <div class="flash-notice">
                                {{ app.session.flash('notice') }}
                            </div><br/>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td><label id="nit" >NIT Cliente:</label></td>
                    <td>
                       {{ form_widget(form.nit) }}
                        <div class="flash-notice">
                            {{ form_errors(form.nit) }}
                        </div>
                    </td>
                </tr>
             
                <tr>
                    <td><label id="nombcliente" >Nombre Cliente:</label></td>
                    <td>
                       {{ form_widget(form.nombcliente) }}
                        <div class="flash-notice">
                            {{ form_errors(form.nombcliente) }}
                        </div>
                    </td>
                </tr>
              
                  
                <tr>
                    <td><label id="reg_user" >Registro Usuario (MINSAL):</label></td>
                    <td>
                        {{ form_widget(form.reg_user) }}
                        {{ form_errors(form.reg_user) }}
                    </td>
                </tr>
                <tr>
                    <td><label id="n_res" >Numero Resoluci√≥n DGII:</label></td>
                    <td>
                        {{ form_widget(form.n_res) }}
                        {{ form_errors(form.n_res) }}
                    </td>
                </tr>
                  <tr><td>&nbsp;</td></tr>
                
                 <tr>
                    <td><label id="alc_id" >Nombre Alcohol:</label></td>
                    <td>
                        {{ form_widget(form.alcId) }}
                        {{ form_errors(form.alcId) }}
                    </td>
                </tr>
                <tr>
                    <td><label id="cantidadltr" >Cantidad (Ltr) :</label></td>
                    <td>
                        {{ form_widget(form.RegVentaLitros) }}
                        <div class="flash-notice">
                            {{ form_errors(form.RegVentaLitros) }}
                        </div>
                    </td>
                </tr>      
                
                <tr>
                    <td><label id="grado" >Grado:</label></td>
                    <td>{{ form_widget(form.RegVentaGrado) }}</td>                
                </tr> 
                
                
                <tr>
                    <td colspan="2"><hr/></td>
                </tr> 
                
                            
                
                <tr>
                    <td align='center' colspan=2 >
                        <div id="msgDialog">
                        </div>
                        <br>
                        
                        <input id="btnGuardar" type="submit" value="Guardar" />
                        
                        <input id="btnEliminar" type="button" value="Eliminar" onclick="return enviarEliminar();"/>

                        <input id="btnRegresar" type="button" value="Regresar" onclick="location.href = '{{ url('MinSalSCAProcesosBundle_mantRegVenta')}}';"/>
                    </td>
                </tr>
            </table>    

    {{ form_rest(form) }}
        </form>
{% endblock%}